<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context="Frontend_Pantallas.Public_NoticeOff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/border_encabezado">

            <ImageButton
                android:id="@+id/boton_regresar2"
                android:layout_width="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:background="#AD1457"
                android:layout_height="40dp"
                android:src="@drawable/ic_regresar" />

            <TextView
                android:id="@+id/texto1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Publicación"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_public"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="#AD1457"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:text="Publicar"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Segundo -->

        <LinearLayout
            android:layout_margin="5dp"
            android:background="@drawable/border_contpublic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Buttons 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:background="@drawable/border_tittlepublic1">

                <EditText
                    android:id="@+id/txttitulo"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/border_tittlepublic1"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:hint="Titulo de la publicación..."
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:lines="2"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:gravity="top" />

                <!-- Seccion View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/texto2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar color del titulo..."
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp" />

                </LinearLayout>

                <!-- Botones Colors -->
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/border_tittlepublic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonBlack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_white"
                        android:onClick="buttonSetColor"
                        android:text=""
                        android:textAllCaps="false"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/buttonBlue"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_blue"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonPurple"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_purple"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonTeal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_teal"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonOrange"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_orange"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonBrown"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_brown"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonPink"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_pink"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonYellow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_yellow"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>


                </LinearLayout>

            </LinearLayout>


            <!-- Cont text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:background="@drawable/border_tittlepublic1">

                <EditText
                    android:id="@+id/txtcontenido"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/border_tittlepublic1"
                    android:ems="10"
                    android:hint="Descripción de la publicación..."
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:lines="2"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:gravity="top"/>

                <!-- Seccion View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/texto3"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar color de la descripción..."
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/border_tittlepublic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonBlack1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_white"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/buttonBlue1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_blue"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonPurple1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_purple"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonTeal1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_teal"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonOrange1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_orange"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonBrown1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_brown"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonPink1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_pink"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/buttonYellow1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/button_yellow"
                        android:textSize="20dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <!-- Tercero -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_img"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/pickImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_public"
                android:textSize="20dp"
                android:text="Seleccionar Imagenes"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Cuarto -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/captureLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_itesco1"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>